package parsers
import inputLanguages.GIFTGrammar
import scala.util.parsing.combinator.JavaTokenParsers
import scala.util.{Try, Success, Failure}

class GIFTParser extends Parser with JavaTokenParsers with GIFTGrammar{
  
  def execute(filePath: String) = {
   Try{io.Source.fromFile(filePath).mkString} match {
      case util.Success(lines) => this.parse(questions, lines).get
      case util.Failure(ex) => println(ex.getMessage)
    }
     
     parse(questions, lines).get
  }

}